<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>
            <TextView
                android:id="@+id/xlbl_textView"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:text="X-Value"/>

            <TextView
                android:id="@+id/x_textView"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_height="100dp" />

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/ylbl_textView"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:text="Y-Value"/>

            <TextView
                android:id="@+id/y_textView"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_height="100dp" />

        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/zlbl_textView"
                android:layout_width="0dp"
                android:layout_column="1"
                android:layout_weight="1"
                android:layout_height="100dp"
                android:text="Z-Value"/>

            <TextView
                android:id="@+id/z_textView"
                android:layout_width="0dp"
                android:layout_column="2"
                android:layout_weight="1"
                android:layout_height="100dp" />

        </TableRow>
    </TableLayout>



</LinearLayout>